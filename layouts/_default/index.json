{{- $index := slice -}}
{{- range .Site.Pages -}}
  {{- $index = $index | append (dict "title" ( .Title | plainify ) "permalink" .Permalink "section" (i18n (.Section | title)) "tags" (apply .Params.tags "i18n" "." ) "categories" (apply .Params.categories "i18n" "." ) "content" .Plain ) -}}
{{- end -}}
{{- $index | jsonify -}}
