{{- $index := slice -}}
{{- range .Site.Pages -}}
  {{- $entry := dict "permalink" .Permalink "title" (.Title | plainify)  -}}
  {{- $entry = merge $entry (dict "content" .Plain) -}}
  {{- $entry = merge $entry (dict "section" .CurrentSection.Title) -}}
  {{- $index = $index | append $entry }}

{{- end -}}
{{- $index | jsonify -}}
